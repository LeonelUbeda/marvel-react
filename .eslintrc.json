{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["plugin:react/recommended", "prettier", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "react/prop-types": "off",
    "linebreak-style": "off",
    "comma-dangle": "off",
    "implicit-arrow-linebreak": "off",
    "no-unused-vars": "warn",
    "object-curly-newline": ["error", { "multiline": true }]
  }
}
